<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.xotty.multimedia">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BitmapActivity"
            android:label="@string/title_activity_bitmap"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CanvasTransformActivity"
            android:label="@string/title_activity_canvas_transform"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewDrawActivity"
            android:label="@string/title_activity_view_draw" />
        <activity
            android:name=".BitmapDrawActivity"
            android:label="@string/title_activity_bitmap_draw" />
        <activity android:name=".GraphUtil" />
        <activity
            android:name=".PlotActivity"
            android:label="@string/title_activity_plot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TextDrawActivity"
            android:label="DrawText"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawableDrawActivity"
            android:label="DrawableDrawActivity" />
        <activity android:name=".SurfaceViewActivity" />
        <activity
            android:name=".PaintActivity"
            android:label="Paint"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>